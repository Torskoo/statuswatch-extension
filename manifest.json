{
  "manifest_version": 2,
  "name": "StatusWatch - Service Status Dashboard",
  "version": "1.0.0",
  "description": "Configure services and query an external API to display status and latency in a polished popup dashboard.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_title": "StatusWatch",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "alarms", "notifications"],
  "host_permissions": ["<all_urls>"]
}
